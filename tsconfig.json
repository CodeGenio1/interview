{
  "exclude": ["node_modules", "dist"],
  "include": ["*.js", "*.ts", "**/*.js", "**/*.ts"],
  "files": ["custom.d.ts"],

  "compilerOptions": {
    "types": ["node"],

    "target": "es2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "esModuleInterop": true,

    "outDir": "./dist",
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
  }
}
